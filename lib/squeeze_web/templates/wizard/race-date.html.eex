<h2>When is your next race?</h2>

<%= form_for @changeset, wizard_path(@conn, :update, @step), [class: "ui form"], fn f -> %>

  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <%= date_input f, :race_date %>
    <%= error_tag f, :race_date %>
  </div>

  <%= submit "Next", class: "primary button" %>
<% end %>
