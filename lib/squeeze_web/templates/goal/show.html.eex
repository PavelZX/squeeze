<div class="ui text container">
  <h2>Show Goal</h2>
  <span><%= link "Edit", to: goal_path(@conn, :edit, @goal) %></span>
  <span><%= link "Back", to: goal_path(@conn, :index) %></span>

  <ul class="ui list">
    <li>
      <strong>Distance:</strong>
      <%= @goal.distance %>
    </li>

    <li>
      <strong>Duration:</strong>
      <%= @goal.duration %>
    </li>

    <li>
      <strong>Name:</strong>
      <%= @goal.name %>
    </li>

    <li>
      <strong>Date:</strong>
      <%= @goal.date %>
    </li>
  </ul>
</div>
