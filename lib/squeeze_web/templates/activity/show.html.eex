<h2>Show Activity</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @activity.name %>
  </li>

  <li>
    <strong>Distance:</strong>
    <%= @activity.distance %>
  </li>

  <li>
    <strong>Duration:</strong>
    <%= @activity.duration %>
  </li>

  <li>
    <strong>Start at:</strong>
    <%= @activity.start_at %>
  </li>

</ul>

<span><%= link "Edit", to: activity_path(@conn, :edit, @activity) %></span>
<span><%= link "Back", to: activity_path(@conn, :index) %></span>
